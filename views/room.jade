extends layout
block title
    title= "Room"
block content
    a(href="/rooms")= "Rooms"

    if name
        form(method="post", action="#")
            input(type="text", name="message", autofocus="autofocus")
            input(type="submit", name="submit", value="submit")
    else
        p= "You're not logged in"
    div
    - each message in messages 
        p= message.name + ": " + message.message
